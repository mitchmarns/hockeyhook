// post-roster.js  (Node 18+)
import fs from "node:fs/promises";

const WEBHOOK_URL = process.env.DISCORD_WEBHOOK_URL;

function fmt(v) {
  const s = (v ?? "").toString().trim();
  return s ? s : "â€”";
}

function renderTeamLineup(teamName, team) {
  const f = team.F ?? [];
  const d = team.D ?? [];
  const g = team.G ?? [];

  const fLines = f.slice(0, 4).map((ln, i) =>
    `L${i + 1}: ${fmt(ln.LW)} â€” ${fmt(ln.C)} â€” ${fmt(ln.RW)}`
  ).join("\n");

  const dPairs = d.slice(0, 3).map((pr, i) =>
    `D${i + 1}: ${fmt(pr.LD)} â€” ${fmt(pr.RD)}`
  ).join("\n");

  const goalies = g.slice(0, 2).map((gg, i) =>
    `G${i + 1}: ${fmt(gg.G)}`
  ).join("\n");

  return [
    `ðŸ’ **${teamName} â€” Character Lines**`,
    ``,
    `**Forwards**`,
    fLines || "â€”",
    ``,
    `**Defense**`,
    dPairs || "â€”",
    ``,
    `**Goalies**`,
    goalies || "â€”",
  ].join("\n");
}

async function postWebhook(payload) {
  if (!WEBHOOK_URL) throw new Error("Set DISCORD_WEBHOOK_URL in your environment.");
  const res = await fetch(WEBHOOK_URL, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify(payload),
  });
  if (!res.ok) throw new Error(`Discord webhook failed: ${res.status} ${await res.text()}`);
}

async function main() {
  const rosters = JSON.parse(await fs.readFile("./rosters.json", "utf8"));

  // pick the first team in the file (easy starting point)
  const teamName = Object.keys(rosters)[0];
  const team = rosters[teamName];

  const content = renderTeamLineup(teamName, team);

  await postWebhook({
    username: "ROSTER BOT",
    content,
  });
}

main().catch((e) => {
  console.error(e);
  process.exit(1);
});
